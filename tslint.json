{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended"],
  "jsRules": {},
  "rules": {
    "semicolon": ["never"],
    "quotemark": ["single"],
    "variable-name": ["allow-trailing-underscore"],
    "arrow-parens": false,
    "no-angle-bracket-type-assertion": false,
    "only-arrow-functions": [
      "allow-declarations"
    ]
  },
  "rulesDirectory": ["ts/."]
}
